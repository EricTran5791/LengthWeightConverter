<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:fitsSystemWindows="true"
             tools:context="ca.erictran.lengthweightconverter.MainActivity$PlaceholderFragment" >

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:weightSum="1.0">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_weight=".6">

            <ScrollView
                    android:id="@+id/scrollView1"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scrollbars="vertical"
                    android:layout_gravity="center_vertical"
                    android:fillViewport="true">

                <TextView
                        android:id="@+id/textView2"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="2dp"
                        android:freezesText="true"
                        android:scrollbarAlwaysDrawVerticalTrack="false"
                        android:text="@string/default_value"
                        android:textSize="80sp"
                        android:gravity="center|center_vertical"/>
            </ScrollView>

            <Spinner
                    android:id="@+id/spinner1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            <ScrollView
                    android:id="@+id/scrollView2"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scrollbars="vertical"
                    android:layout_gravity="center_vertical"
                    android:fillViewport="true">

                <TextView
                        android:id="@+id/textView3"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="2dp"
                        android:freezesText="true"
                        android:scrollbarAlwaysDrawVerticalTrack="false"
                        android:text="@string/default_value"
                        android:textSize="80sp"
                        android:gravity="center|center_vertical"/>
            </ScrollView>

            <Spinner
                    android:id="@+id/spinner2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1.0"
                android:id="@+id/linearLayout4"
                android:layout_weight=".1">

            <Button
                    android:id="@+id/Button7"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight=".25"
                    android:background="@drawable/custom_button"
                    android:text="@string/Button7"
                    android:textColor="#fafafa"
                    android:textSize="60sp" />

            <Button
                    android:id="@+id/Button8"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight=".25"
                    android:background="@drawable/custom_button"
                    android:text="@string/Button8"
                    android:textColor="#fafafa"
                    android:textSize="60sp" />

            <Button
                    android:id="@+id/Button9"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight=".25"
                    android:background="@drawable/custom_button"
                    android:text="@string/Button9"
                    android:textColor="#fafafa"
                    android:textSize="60sp" />

            <ImageButton
                    android:id="@+id/ButtonClear"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight=".25"
                    android:background="@drawable/custom_button2"
                    android:contentDescription="@string/ButtonClear"
                    android:src="@drawable/ic_action_content_clear" />
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1.0"
                android:id="@+id/linearLayout3"
                android:layout_weight=".1">

            <Button
                    android:id="@+id/Button4"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight=".25"
                    android:background="@drawable/custom_button"
                    android:text="@string/Button4"
                    android:textColor="#fafafa"
                    android:textSize="60sp" />

            <Button
                    android:id="@+id/Button5"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight=".25"
                    android:background="@drawable/custom_button"
                    android:text="@string/Button5"
                    android:textColor="#fafafa"
                    android:textSize="60sp" />

            <Button
                    android:id="@+id/Button6"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight=".25"
                    android:background="@drawable/custom_button"
                    android:text="@string/Button6"
                    android:textColor="#fafafa"
                    android:textSize="60sp" />

            <ImageButton
                    android:id="@+id/ButtonBackspace"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight=".25"
                    android:background="@drawable/custom_button2"
                    android:contentDescription="@string/ButtonBackspace"
                    android:src="@drawable/ic_action_content_backspace" />
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1.0"
                android:id="@+id/linearLayout2"
                android:layout_weight=".1">

            <Button
                    android:id="@+id/Button1"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight=".25"
                    android:background="@drawable/custom_button"
                    android:text="@string/Button1"
                    android:textColor="#fafafa"
                    android:textSize="60sp" />

            <Button
                    android:id="@+id/Button2"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight=".25"
                    android:background="@drawable/custom_button"
                    android:text="@string/Button2"
                    android:textColor="#fafafa"
                    android:textSize="60sp" />

            <Button
                    android:id="@+id/Button3"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight=".25"
                    android:background="@drawable/custom_button"
                    android:text="@string/Button3"
                    android:textColor="#fafafa"
                    android:textSize="60sp" />

            <ImageButton
                    android:id="@+id/ButtonSwitch"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight=".25"
                    android:background="@drawable/custom_button2"
                    android:contentDescription="@string/ButtonSwitch"
                    android:src="@drawable/ic_action_content_switch" />
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout"
                android:layout_weight=".1">

            <Button
                    android:id="@+id/Button0"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/custom_button"
                    android:text="@string/Button0"
                    android:textColor="#fafafa"
                    android:textSize="60sp" />

            <Button
                    android:id="@+id/ButtonDecimal"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/custom_button"
                    android:text="@string/ButtonDecimal"
                    android:textColor="#fafafa"
                    android:textSize="60sp" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>